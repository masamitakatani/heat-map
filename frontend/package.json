{
  "name": "@heatmap-analytics/core",
  "version": "0.1.0",
  "description": "Heatmap & Funnel Analytics Tool - Lightweight JavaScript library for tracking user behavior",
  "type": "module",
  "main": "./dist/heatmap-analytics.umd.js",
  "module": "./dist/heatmap-analytics.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/heatmap-analytics.es.js",
      "require": "./dist/heatmap-analytics.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cp lp.html dist/lp.html && cp lp.html dist/index.html",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "size": "npm run build && gzip -c dist/heatmap-analytics.umd.js | wc -c",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "heatmap",
    "analytics",
    "funnel",
    "click-tracking",
    "user-behavior",
    "connected-one"
  ],
  "author": "ConnectedOne Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tanstack/query-core": "^5.90.6"
  }
}
