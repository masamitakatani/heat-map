{
  "version": 2,
  "buildCommand": "cd packages/dashboard && npm ci && npm run build",
  "outputDirectory": "packages/dashboard/dist",
  "installCommand": "cd packages/dashboard && npm ci",
  "framework": null,
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./packages/dashboard",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
