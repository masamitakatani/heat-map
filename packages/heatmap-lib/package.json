{
  "name": "@heat-map/heatmap-lib",
  "version": "0.1.0",
  "type": "module",
  "description": "Lightweight heatmap and funnel analysis library",
  "main": "./dist/heatmap-lib.umd.js",
  "module": "./dist/heatmap-lib.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/heatmap-lib.es.js",
      "require": "./dist/heatmap-lib.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "terser": "^5.44.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "keywords": [
    "heatmap",
    "funnel-analysis",
    "analytics",
    "user-behavior"
  ]
}
